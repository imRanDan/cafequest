    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.10.4",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@react-google-maps/api": "^2.19.3",
    "@vercel/analytics": "^1.5.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "figlet": "^1.8.0",
    "firebase": "^11.7.3",
    "framer-motion": "^11.14.4",
    "leaflet": "^1.9.4",
    "lodash.debounce": "^4.0.8",
    "mapbox-gl": "^3.9.1",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
